generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  googleId     String?   @unique
  email        String    @unique
  name         String
  picture      String?
  refreshToken String?
  password     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  chatSessions ChatSession[]
}

model ChatSession {
  id              String    @id @default(uuid())
  userId          Int
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String?
  messages        Message[]
  vectorIndexKey  Bytes?    // NEW: Store encryption key for CyborgDB
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Message {
  id          String       @id @default(uuid())
  sessionId   String
  session     ChatSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role        String       // 'user' | 'assistant' | 'system'
  content     String       @db.Text
  attachments Attachment[]
  tokens      Int?
  createdAt   DateTime     @default(now())
}

model Attachment {
  id        String      @id @default(uuid())
  messageId String?
  message   Message?    @relation(fields: [messageId], references: [id], onDelete: Cascade)
  type      String  
  url       String
  filename  String
  mimeType  String
  size      Int
  metadata  Json?
  chunks    ChunkData[] // NEW: Relation to chunks
  createdAt DateTime    @default(now())
}

model ChunkData {
  id           String      @id @default(uuid())
  attachmentId String
  attachment   Attachment  @relation(fields: [attachmentId], references: [id], onDelete: Cascade)
  chunkIndex   Int
  content      String      @db.Text
  vectorId     String      @unique //"attachmentId:chunkIndex" 
  pageNumber   Int?        
  startChar    Int?
  endChar      Int?
  storedAt     DateTime    @default(now())

  @@unique([attachmentId, chunkIndex])
  @@index([vectorId])
  @@index([attachmentId])
}